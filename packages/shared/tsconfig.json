{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "NodeNext",
    "target": "ES2023",
    "lib": [
      "ES2023"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "outDir": "../../out/packages/shared",
    "tsBuildInfoFile": "../../out/packages/shared/tsconfig.tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}