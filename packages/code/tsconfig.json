{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2023",
    "lib": [
      "ES2023"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "types": [
      "node",
      "electron",
      "vscode"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "@paai/shared/*": [
        "../shared/src/*"
      ],
      "@paai/peon/*": [
        "../peon/src/*"
      ]
    },
    "outDir": "../../out/packages/code",
    "tsBuildInfoFile": "../../out/packages/code/tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../shared" },
    { "path": "../peon" }
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}